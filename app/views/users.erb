<div class="container">
  <h1>COW -Twitter</h1>
  <h2>Users</h2>
  <table>
    <% if @users %>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td>
            <form  action='/users/#{user.id}' method='post'>
              <input type='submit' value='Follow'/>
            </form>
          </td>
        </tr>
      <% end %>
    <% end %>
  </table>
</div>
